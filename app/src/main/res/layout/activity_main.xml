<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pressione_o_botao_para_sortear_uma_bola_do_bingo"
        android:textSize="18sp" />

    <Button
        android:id="@+id/SortearBingoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sortearBingo"
        android:text="Sortear" />

    <Button
        android:id="@+id/ReiniciarBingoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="reiniciarBingo"
        android:text="Reiniciar Bingo" />

    <TextView
        android:id="@+id/resultadoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/bingo_ainda_nao_comecou"
        android:textSize="40sp" />

</LinearLayout>